@using System.Web.Optimization
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Urban Movement</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />
    @Styles.Render("~/Content/css")
</head>
<body>
    <header>
        <div class="logo">
            <img src="../../Images/Logo/logo.png" alt="" style="display: block; margin: auto" />
        </div>
        <div class="bar"></div>
    </header>
    <div id="body">
        <section class="content-wrapper main-content clear-fix">
            <div id="content">
                @RenderBody();
            </div>
        </section>
    </div>
    <footer>
        <div class="content-wrapper">
            <div class="float-left">
                <p>&copy; @DateTime.Now.Year - Urban Movement Radio</p>
            </div>
        </div>
    </footer>
    @RenderSection("scripts", false)
    @Scripts.Render("~/bundles/site")
</body>
<script>
    $(function () {
        siteInitialise();
    });
</script>
</html>
